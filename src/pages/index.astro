---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { Picture } from "astro:assets";
import logoImage from "../assets/logo.png";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <section class="intro">
        <div class="logo-wrap">
          <Picture
            src={logoImage}
            alt="Logo Mercenari del Labirinto"
            width="300"
          />
        </div>
        <div class="intro-text">
          <h4>A.S.D. Mercenari del Labirinto</h4>
          <p>
            V. Sarzanese, 2810 - 55100 Lucca LU<br />
            CF: 92069420468<br />
            mail: mercenaridellabirinto at gmail.com<br />
            PEC: mercenari at arubapec.it
          </p>
        </div>
      </section>
    </main>

    <style>
      .intro { display: flow-root; }
      .logo-wrap {
        width: 200px;
        margin: 0 auto 1rem auto;
      }
      .logo-wrap picture,
      .logo-wrap img {
        display: block;
        width: 100%;
        height: auto;
      }
      .intro-text { overflow: hidden; }

      @media (min-width: 768px) {
        .logo-wrap {
          float: left;
          margin: 0 3rem 1rem 0;
        }
      }
    </style>
    <Footer />
  </body>
</html>
